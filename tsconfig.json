{
  "compilerOptions": {
    "allowJs": true,
    "module": "ESNext",
    "target": "ES5",
    "sourceMap": false,
    "jsx": "react-jsx",
    "moduleResolution": "Node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "noEmit": true,
    "strict": true,
    "alwaysStrict": true,
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "types": ["vitest/globals"]
  },
  "include": ["src"]
}
